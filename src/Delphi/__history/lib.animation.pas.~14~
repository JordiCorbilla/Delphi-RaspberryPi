unit lib.animation;

interface

uses
  System.Classes, REST.Client, lib.nodes, Generics.collections, FMX.StdCtrls, FMX.Objects;

type
  TNodeThread = class(TThread)
  private
    FListNodes : TList<TNode>;
    FRequest: TRESTRequest;
    FResponse: TRESTResponse;
    FlabelNode: TLabel;
    FRoundRect: TRoundRect;
    FAniIndicator: TAniIndicator;
  public
    constructor Create(request: TRESTRequest; response: TRESTResponse; nodes : TList<TNode>; labelNode: TLabel; RoundRect: TRoundRect; AniIndicator: TAniIndicator); reintroduce;
  protected
    procedure Execute; override;
  end;

implementation

uses
  System.JSON, System.SysUtils;

constructor TNodeThread.Create(request: TRESTRequest; response: TRESTResponse; nodes : TList<TNode>; labelNode: TLabel; RoundRect: TRoundRect; AniIndicator: TAniIndicator);
begin
  inherited Create(True);
  FreeOnTerminate := True;
  FListNodes := nodes;
  FRequest := request;
  FResponse := response;
  FlabelNode := labelNode;
  FRoundRect := RoundRect;
  FAniIndicator := AniIndicator;
end;

procedure TNodeThread.Execute;
var
  node : TNode;
  jValue: TJSONValue;
begin
  Synchronize(
    procedure ()
    begin
        FAniIndicator.Visible := true;
        FAniIndicator.Enabled := true;
    end
  );
  for node in FListNodes do
  begin
    FRequest.Resource := node.Action;
    FRequest.Execute;
    jValue:=FResponse.JSONValue;
    if jValue.ToString.Contains('alive') then
    begin
      FlabelNode.Text := 'Alive';
      FRoundRect.Fill.Color := node.ColorOn;
    end
    else
    begin
      FlabelNode.Text := 'Dead';
      FRoundRect.Fill.Color := node.ColorOff;
    end;
  end;

  //do processing
end;

end.
